{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2021"],
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
  },
  "include": ["./src/**/*"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  }
}